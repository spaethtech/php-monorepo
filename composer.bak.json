{
    "name": "spaethtech/php-monorepo",
    "description": "The mono repo for all of our PHP libraries.",
    "type": "monorepo",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-imagick": "*",
        "ext-json": "*",
        "composer/composer": "^2.5",
        "symfony/console": "^5.4",
        "consolidation/robo": "^4.0",
        "spaethtech/php-annotations": "@dev",

        "spaethtech/php-console": "@dev",
        "spaethtech/php-robo": "@dev",
        "spaethtech/php-slim-imagick": "@dev",
        "spaethtech/php-support": "@dev",

        "vlucas/phpdotenv": "^5.5",
        "ext-fileinfo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "onspli/phpdoc-markdown": "^0.3.3",
        "symplify/monorepo-builder": "11.2.3.72"
    },
    "autoload": {
        "files": [
            "globals.php"
        ],
        "psr-4": {
            "App\\": "src/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "lib/*",
            "options": {
                "symlink": true
            }
        }
    ]
}
