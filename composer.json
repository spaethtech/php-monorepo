{
    "name": "spaethtech/php-monorepo",
    "description": "The mono repo for all of our PHP libraries.",
    "license": "MIT",
    "authors": [
        {
            "name": "Ryan Spaeth",
            "email": "rspaeth@spaethtech.com"
        }
    ],
    "type": "monorepo",
    "require": {
        "composer/composer": "^2.5",
        "ext-curl": "*",
        "ext-json": "*",
        "php": ">=8.1",
        "spaethtech/annotations": "@dev",
        "spaethtech/collections": "@dev",
        "ext-dom": "*",
        "ext-libxml": "*",
        "ext-simplexml": "*",
        "symfony/console": "^6.3",
        "symfony/process": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "consolidation/robo": "^4"
    },
    "autoload": {
        "files": [
            "globals.php"
        ],
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "files": [
            "globals.php"
        ],
        "psr-4": {
            "App\\": "src/"
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "lib/*",
            "options": {
                "symlink": true
            }
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
